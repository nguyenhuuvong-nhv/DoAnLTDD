<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".dangki">

    <ImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:fontFamily="serif"
        android:text="Đặt liền tay - giao hàng ngay"
        android:textColor="#05749F"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/montserrat"
        android:text="Đăng kí"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/user_Signup"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/signTv"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:inputType="text|textEmailAddress"
        android:textColorHint="#64BCF6"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/pass_Signup"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/user_Signup"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:textColorHint="#64BCF6"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/confirmTv"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/pass_Signup"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
        android:hint="Nhập lại mật khẩu"
        android:inputType="textPassword"
        android:textColorHint="#64BCF6"
        android:textStyle="italic" />

    <CheckBox
        android:id="@+id/cp_policy"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmTv"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Tôi đồng ý với điều khoản"
        android:textColor="#040404"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bt_dangki"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/cp_policy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttondangnhap"
        android:text="Đăng kí"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_dangki"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đã có tài khoản?"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/dangnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Đăng nhập"
            android:textColor="#0E8FE5"
            android:textSize="20dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>