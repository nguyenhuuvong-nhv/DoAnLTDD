<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dangnhap"
    >
    <ImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo"/>
    <TextView
        android:id="@+id/title"
        android:layout_below="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt liền tay - giao hàng ngay"
        android:textSize="15dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:textColor="#05749F"
        android:fontFamily="serif"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/signTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="Đăng kí"
        android:textSize="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:fontFamily="serif"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/nameTv"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signTv"
        android:weightSum="2"
        android:layout_centerHorizontal="true"
        >
        <EditText
            android:layout_weight="1"
            android:layout_height="50dp"
            android:textColorHint="#64BCF6"
            android:hint=" Nhập họ"
            android:inputType="text"
            android:textStyle="italic"
            android:layout_width="match_parent" />
        <EditText

            android:layout_weight="1"
            android:layout_height="50dp"
            android:hint=" Nhập tên"
            android:textColorHint="#64BCF6"
            android:inputType="text"
            android:layout_width="match_parent"
            android:textStyle="italic"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/userTv"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:inputType="text"
        android:layout_height="50dp"
        android:layout_below="@id/nameTv"
        android:hint=" Tên người dùng "
        android:textColorHint="#64BCF6"
        android:textStyle="italic"
        />
    <EditText
        android:id="@+id/passTv"
        android:layout_below="@id/userTv"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint=" Nhập mật khẩu "
        android:textStyle="italic"
        android:textColorHint="#64BCF6"
        android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
        />
    <EditText
        android:id="@+id/confirmTv"
        android:layout_below="@id/passTv"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint=" Xác nhận lại mật khẩu "
        android:textColorHint="#64BCF6"
        android:textStyle="italic"
        android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
        />
    <CheckBox
        android:id="@+id/policy"
        android:layout_marginTop="20dp"
        android:layout_below="@id/confirmTv"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Tôi đồng ý với điều khoản sử dụng"
        android:textSize="20dp"
        android:textColor="#040404"
        android:layout_marginLeft="20dp" />
    <Button
        android:layout_below="@id/policy"
        android:id="@+id/signBt"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Đăng kí"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:background="@drawable/buttondangnhap" />
    <LinearLayout
        android:layout_below="@id/signBt"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đã có tài khoản?"
            android:textSize="20dp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/dangnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Đăng nhập"
            android:textSize="20dp"
            android:textColor="#0E8FE5"
            />
    </LinearLayout>
</RelativeLayout>