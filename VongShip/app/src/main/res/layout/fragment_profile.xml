<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context=".Fragment.ProfileFragment">
    <LinearLayout
        android:background="#FFFFFF"
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="127dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="22dp"
            android:layout_gravity="center_vertical"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/cat"
            app:civ_border_width="2dp"
            app:civ_border_color="#EDEDED"/>
        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành Luân"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:layout_below="@id/nameTv"
                android:id="@+id/phoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0383.422.211"
                android:textSize="18dp"
                android:textColor="#000000"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#FFFFFF"
        android:id="@+id/recommend"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:background="@drawable/ic_gift"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <RelativeLayout
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/recommendTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới thiệu Loship cho bạn bè"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:layout_below="@id/recommendTv"
                android:id="@+id/rcmDcrpTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhận ngay phần thưởng hấp dẫn"
                android:textSize="18dp"
                android:textColor="#000000"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommend"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boderbot"
            android:drawableLeft="@drawable/ic_emotion"
            android:drawableRight="@drawable/ic_forward"
            android:padding="5dp"
            android:text=" Cộng đồng Loship"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boderbot"
            android:drawableLeft="@drawable/ic_favorite"
            android:drawableRight="@drawable/ic_forward"
            android:padding="5dp"
            android:text=" Cửa hàng yêu thích"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boderbot"
            android:drawableLeft="@drawable/ic_edit"
            android:drawableRight="@drawable/ic_forward"
            android:padding="5dp"
            android:text=" Quản lý hồ sơ"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boderbot"
            android:drawableLeft="@drawable/ic_card"
            android:drawableRight="@drawable/ic_forward"
            android:padding="5dp"
            android:text=" Quản lý thẻ"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boderbot"
            android:drawableLeft="@drawable/ic_help"
            android:drawableRight="@drawable/ic_forward"
            android:padding="5dp"
            android:text=" Câu hỏi thường gặp"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boderbot"
            android:drawableLeft="@drawable/ic_textsms"
            android:drawableRight="@drawable/ic_forward"
            android:padding="5dp"
            android:text=" Đề xuất ý tưởng mong muốn"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boderbot"
            android:drawableLeft="@drawable/ic_textsms"
            android:drawableRight="@drawable/ic_forward"
            android:padding="5dp"
            android:text=" Đóng góp tính năng Loship"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boderbot"
            android:drawableLeft="@drawable/ic_phone"
            android:drawableRight="@drawable/ic_forward"
            android:padding="5dp"
            android:text=" Liên hệ với Loship"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listOption"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_below="@+id/listOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boderbot"
            android:drawableLeft="@drawable/ic_logout"
            android:padding="5dp"
            android:text=" Đăng xuất"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>